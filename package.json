{
  "name": "@hexafield/jsonpath-object-transform",
  "version": "2.0.0",
  "description": "Transform an object literal using jsonpath.",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pretest": "npm run build",
    "test": "vitest run",
    "format": "prettier --write .",
    "lint": "eslint -c eslint.config.mjs src test",
    "lint:fix": "eslint -c eslint.config.mjs src test --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "rm -rf ./dist && tsc --build tsconfig.build.json",
    "validate": "npm ls",
    "dev": "vite",
    "preview": "vite preview"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/hexafield/jsonpath-object-transform.git"
  },
  "keywords": [
    "jsonpath",
    "json",
    "path",
    "object",
    "translate",
    "format",
    "transform",
    "remap",
    "map"
  ],
  "authors": [
    "David Lane <me@dvdln.com>",
    "Hexafield <me@hexafield.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "acorn": "^8.15.0",
    "jsonpath-plus": "^10.3.0",
    "static-eval": "^2.1.1"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@eslint/js": "^9.34.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.6.2",
    "@originjs/vite-plugin-commonjs": "^1.0.3",
    "@types/node": "^24.3.0",
    "@types/static-eval": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "globals": "^15.15.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^5.4.8",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^2.1.3"
  }
}
